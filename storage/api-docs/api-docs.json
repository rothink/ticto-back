        "/api/cep/{cep}": {
            "get": {
                "tags": [
                    "CEP"
                ],
                "summary": "Consultar CEP",
                "description": "Consulta informações de endereço através do CEP utilizando o serviço ViaCEP. Esta rota é pública e não requer autenticação.",
                "operationId": "consultarCep",
                "parameters": [
                    {
                        "name": "cep",
                        "in": "path",
                        "description": "CEP a ser consultado (formato: 00000000 ou 00000-000)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "pattern": "^[0-9]{8}$|^[0-9]{5}-[0-9]{3}$",
                            "example": "01310100"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "CEP encontrado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "properties": {
                                                "cep": {
                                                    "description": "CEP formatado",
                                                    "type": "string",
                                                    "example": "01310-100"
                                                },
                                                "endereco": {
                                                    "description": "Nome da rua/avenida",
                                                    "type": "string",
                                                    "example": "Avenida Paulista"
                                                },
                                                "bairro": {
                                                    "description": "Nome do bairro",
                                                    "type": "string",
                                                    "example": "Bela Vista"
                                                },
                                                "cidade": {
                                                    "description": "Nome da cidade",
                                                    "type": "string",
                                                    "example": "São Paulo"
                                                },
                                                "estado": {
                                                    "description": "Sigla do estado",
                                                    "type": "string",
                                                    "example": "SP"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "CEP não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "CEP não encontrado"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "CEP inválido",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "CEP deve ter 8 dígitos"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Erro interno do servidor"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
